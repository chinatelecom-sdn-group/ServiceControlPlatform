<body>
    <div class="container-fluid ">
        <div class="col-sm-6 col-sm-offset-4 col-md-6 col-md-offset-3 main">
            <div id="id_message"><%- message %></div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <center>
                        <h2 class="form-signin-heading"  id="form-head" >Service Control Platform</h2>
                    </center>
                    <form class="form-signin" role="form" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="username" required="" autofocus="" id="username" name="username">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password" required=""  id="password" name="password">
                        </div>
                        <select class="combobox form-control" id="language" name="language" onchange="change_login_ui()" >
                            <option value="en">English（en）</option>
                            <option value="zh-cn">中文简体（zh-cn）</option>
                        </select>

                        <div class="checkbox">
                            <!--
                            <label id="label_remember">
                                <input type="checkbox" value="remember-me"> Remember me
                            </label>
                            -->
                            <button class="btn btn-lg btn-primary btn-block" type="submit" id="id_btn_login">Sign in</button>
                        </div>
                    </form>
                </div>
            </div>
       </div>
    </div>
</body>
</html>