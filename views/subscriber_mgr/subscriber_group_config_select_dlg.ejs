<div class="modal fade" id="modal-container-select-dlg" role="dialog" aria-labelledby="modal-container-select-dlg"
     aria-hidden="true">
    <div class="modal-dialog" style="width: 60%;margin-top: 5%">
        <div class="modal-content">
            <form class="form-horizontal" >
                <fieldset>
                    <div class="modal-header" >
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h4 class="modal-title" id="select_dlg_subscriber_type" style="display: none;">
                        </h4>
                        <h4 class="modal-title" id="select_dlg_title">
                        </h4>
                    </div>
                    <div class="modal-body" id="modal-container-select-dlg-content"
                         name="modal-container-select-dlg-content">
                    </div>
                    <div class="modal-footer form-actions">
                        <div class="col-md-8 pull-left">
                            <div class="input-group input-group-sm">
                                <input type="text" id="id_search_select" class="form-control">
                                   <span class="input-group-btn">
                                      <button id="id_search_select" class="btn btn-default" type="button">
                                          <span class="glyphicon glyphicon-search"></span> <%= nav_head.btn_search %>
                                      </button>
                                  </span>
                            </div>
                            <!-- /input-group -->
                        </div>
                        <div class="pull-right">
                            <button type="button" class="btn btn-default"
                                    data-dismiss="modal"><%= nav_head.btn_close %></button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal"
                                    id="id_btn_add_subscriber"
                                    name="id_btn_add_subscriber">
                                <%= nav_head.btn_save %>
                            </button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script>
    $("button#id_btn_add_subscriber").click(function () {
        $("[name='check_box_subscriber']").each(function () {
            if ($(this).prop("checked")) {
                if ($(this).val() != null) {
                    var obj = eval("("+$(this).val()+")");
                    obj["Name"] = obj.Account;
                    var newOption = "<option value='" + JSON.stringify(obj)+ "'>" + obj.Name + "</option>";
                    var type = $("#select_dlg_subscriber_type").html();
                    if(type=="normal"){
                        $("select#inputSubscriberList").append(newOption);
                    }else{
                        $("select#inputVirtualSubscriberList").append(newOption);
                    }
                }
            }
        });
    });

</script>