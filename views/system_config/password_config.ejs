<% include ../_main_/head %>

<% include ../_main_/body_head %>
<form class="form-horizontal" role="form" method="post">
    <div class="panel panel-default">
        <div class="panel-body">
            <input type="text" class="hide" id="id_modify_dlg_UserID" name="id_modify_dlg_UserID" required value="<%= userid %>"/>
            <input type="text" class="hide" id="id_modify_dlg_UserName" name="id_modify_dlg_UserName" required value="<%= user %>"/>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label"><%= content.new_pw %></label>
                <div class="col-sm-8">
                    <input type="password" class="form-control"  id="id_modify_dlg_Password" name="id_modify_dlg_Password" required  onchange="checkPasswords()"/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label"><%= content.repeat_pw %></label>
                <div class="col-sm-8">
                    <input type="password" class="form-control"  id="id_modify_dlg_Password_2" name="id_modify_dlg_Password_2" required onchange="checkPasswords()"/>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><%= content.btn_save %></button>
                </div>
            </div>
        </div>
      </div>
</form>
<% include ../_main_/body_foot %>
<script>
    function checkPasswords() {
        var passl = document.getElementById("id_modify_dlg_Password");
        var pass2 = document.getElementById("id_modify_dlg_Password_2");
        if (passl.value != pass2.value)
            passl.setCustomValidity("两次密码必须输入一致！");
        else
            passl.setCustomValidity('');
    }
</script>
<% include ../_main_/foot %>