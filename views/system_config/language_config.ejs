<% include ../_main_/body_head %>
<form class="form-horizontal" role="form" method="post">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label"><%= content.label_language %></label>
                <div class="col-sm-8">
                    <select class="combobox form-control" id="language" name="language" >
                        <% if(language=="zh-cn") { %>
                            <option value="zh-cn">中文简体（zh-cn）</option>
                            <option value="en">English（en）</option>
                        <% } else {%>
                            <option value="en">English（en）</option>
                            <option value="zh-cn">中文简体（zh-cn）</option>
                        <% } %>
                    </select>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><%= content.btn_save %></button>
                </div>
            </div>
        </div>
    </div>
</form>
